<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:id="@+id/wallet_transaction_NestedScrollView_id"
    tools:context=".presentation.fragments.home.WalletFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wallet_relativeLayout_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/tool_bar_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_logo_imageView_id"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toStartOf="@+id/frameLayoutcart"
                android:layout_toEndOf="@+id/frameLayout"
                android:src="@drawable/small_logo"
                app:layout_constraintBottom_toBottomOf="@+id/frameLayoutcart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frameLayoutcart" />


            <FrameLayout
                android:id="@+id/frameLayoutcart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/_10sdp"

                app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
                app:layout_constraintEnd_toStartOf="@+id/frameLayout"
                app:layout_constraintTop_toTopOf="@+id/frameLayout">

                <ImageView
                    android:id="@+id/home_cart_imageView_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:contentDescription="99"
                    android:src="@drawable/cart_icon" />

                <TextView
                    android:id="@+id/cart_counter_TextView_id"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/counter_background"
                    android:fontFamily="@font/droid_arabic_kufi_regular"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </FrameLayout>



            <!-- Your main content here -->

            <!-- Notification Icon with Counter -->
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/_10sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/home_notification_imageView_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:contentDescription="99"
                    android:src="@drawable/notifications_icon" />

                <TextView
                    android:id="@+id/notification_counter_TextView_id"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/counter_background"
                    android:fontFamily="@font/droid_arabic_kufi_regular"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:textStyle="bold" />
            </FrameLayout>



            <!--  <ImageView
                  android:id="@+id/"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="21dp"
                  android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_toStartOf="@+id/home_settings_imageView_id"
                  android:src="@drawable/notifications_icon" />-->

            <!-- <TextView
                 android:id="@+id/home_notification_counter_TextView_id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignStart="@+id/home_notification_imageView_id"
                 android:layout_alignTop="@+id/home_notification_imageView_id"
                 android:layout_alignEnd="@+id/home_notification_imageView_id"
                 android:layout_alignBottom="@+id/home_notification_imageView_id"
                 android:layout_marginStart="13dp"
                 android:layout_marginTop="-2dp"
                 android:layout_marginEnd="-6dp"
                 android:layout_marginBottom="13dp"
                 android:visibility="gone"
                 android:background="@drawable/counter_backgground"
                 android:gravity="center"
                 android:text="10"
                 android:textColor="@color/white" />-->


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wallet_relativeLayout_id">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="70dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/wallet_icon_for_fragment_medim_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wallet_pay_wallet_balance_textView_id"
                    style="@style/walletBalanceStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/wallet_pay_wallet_balance_textView_id">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wallet_frag_withdraw_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_wallet_make_withdrow_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Withdraw"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/wallet_pay_wallet_balance_textView_id"
                        app:layout_constraintTop_toBottomOf="@+id/wallet_pay_wallet_balance_textView_id" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wallet_frag_make_ad_button_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"

                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_wallet_make_ad_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Make An Ad"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button"
                        app:layout_constraintTop_toTopOf="@+id/button" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/wallet_frag_earning_textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earning"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/cardView5"
            app:layout_constraintEnd_toEndOf="@+id/cardView5"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="@+id/cardView5" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/wallet_side_menu_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView5" />

        <TextView
            android:id="@+id/wallet_frag_activity_TextView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="ACTIVITIES"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toTopOf="@+id/imageView8" />

        <LinearLayout
            android:id="@+id/wallet_filter_from_LinearLayout_id"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/filter_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/wallet_filter_to_LinearLayout_id"
            app:layout_constraintEnd_toStartOf="@+id/wallet_filter_to_LinearLayout_id"
            app:layout_constraintTop_toBottomOf="@+id/cardView5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/filter_wallet_icon" />

            <TextView
                android:id="@+id/filter_date_from_TextView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="5dp"
                android:text="From" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/wallet_filter_to_LinearLayout_id"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/filter_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_margin="@dimen/_3sdp"
                android:src="@drawable/filter_wallet_icon" />

            <TextView
                android:id="@+id/filter_date_to_TextView_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="5dp"
                android:text="To" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallet_RecyclerView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wallet_frag_use_code_button_id"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/button_wallet_use_code_background"
            android:text="Enter Coupon Code"
            android:textAllCaps="false"
            android:textColor="#1B245C"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView5"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/cardView5"
            app:layout_constraintTop_toTopOf="@+id/cardView5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
