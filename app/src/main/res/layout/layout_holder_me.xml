<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/messagePart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardImageViewMessage"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/larg_arak_logo"
                    android:visibility="visible" />


            </FrameLayout>
        </androidx.cardview.widget.CardView>





        <TextView
            android:id="@+id/tv_chat_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/fontFamilyStyle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.8"
            android:background="@drawable/bg_chat_you"
            android:maxLines="4"
            android:padding="@dimen/_10sdp"
            android:text="Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are Hi, joe how are "
            android:textColor="@color/orange"
            android:textSize="@dimen/_11sdp" />



    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/fontFamilyStyle"
        android:layout_below="@+id/messagePart"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        android:text="5:04pm"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>