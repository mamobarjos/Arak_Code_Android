<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/category_ConstraintLayout_id">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/product_story_imageView_id"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingBottom="15dp"
    android:scaleType="centerCrop"
    android:src="@color/pink"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/filter_category_name_TextView_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="@dimen/_10sdp"
    android:textColor="@color/dark_blue"
    android:padding="@dimen/_2sdp"
    android:ellipsize="end"
    android:maxLines="1"
    android:fontFamily="@font/droid_arabic_kufi_regular"
    android:singleLine="true"
    android:textAlignment="center"
    android:maxWidth="@dimen/_70sdp"
    app:layout_constraintEnd_toEndOf="@+id/product_story_imageView_id"
    app:layout_constraintStart_toStartOf="@+id/product_story_imageView_id"
    app:layout_constraintTop_toBottomOf="@+id/product_story_imageView_id" />
</androidx.constraintlayout.widget.ConstraintLayout>