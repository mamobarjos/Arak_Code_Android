<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_options_card_CardView_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:background="@drawable/payment_options_card_view_background">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ranking_user_image_circleImageView_id"
                android:layout_width="@dimen/_51sdp"
                android:layout_height="@dimen/_51sdp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/image_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ranking_userName_textView_id"
                style="@style/rankingUserNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Khaled Hadyeh"
                app:layout_constraintStart_toEndOf="@+id/ranking_user_image_circleImageView_id"
                app:layout_constraintTop_toTopOf="@+id/ranking_user_image_circleImageView_id" />

            <TextView
                android:id="@+id/ranking_user_country_textView_id"
                style="@style/rankingCountryNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jordan"
                app:layout_constraintEnd_toEndOf="@+id/ranking_userName_textView_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ranking_userName_textView_id"
                app:layout_constraintTop_toBottomOf="@+id/ranking_userName_textView_id" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/ranking_videos_views_textView_id"
                    style="@style/rankingCountryNameStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="250 \n Video View" />

                <TextView
                    android:id="@+id/ranking_images_views_textView_id"
                    style="@style/rankingCountryNameStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="120 \n Image View" />

                <TextView
                    android:id="@+id/ranking_website_views_textView_id"
                    style="@style/rankingCountryNameStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="250 \n Website View" />

                <TextView
                    android:id="@+id/ranking_total_revenue_textView_id"
                    style="@style/rankingCountryNameStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="JOD 35 \n Total Revenue" />

            </LinearLayout>

            <TextView
                android:id="@+id/ranking_user_rank_level_textView_id"
                style="@style/rankingCountryNameStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="1 \n Ranking"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>